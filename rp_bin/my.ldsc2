### infer ratio
my $logfile = "$danerfile.ldsc.log";
die $!."($logfile)" unless open FILE, "< $logfile";
my $nca = 0;
my $nco = 0;
my $sample_prev = 0.5;
while (my $line = <FILE>){
    my @cells = split /\s+/, $line;
    if (@cells > 0) {
	if ($cells[0] eq "Inferred") {
	    $nca = $cells[4];
	    $nca =~ s/,//g;
	    $nco = $cells[7];
	    if ($nca > 0 && $nco > 0){
		$sample_prev = $nca / ($nca + $nco);
	    }
	}
    }
}
close FILE;

$sample_prev = sprintf "%.4f", $sample_prev;
